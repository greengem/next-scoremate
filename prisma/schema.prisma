generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Guest {
  id      String @id @default(cuid())
  name    String
  avatar  String @default("guestAvatar.png")
  plays   Play[] @relation("PlayToGuests")
}

model Play {
  id            String    @id @default(cuid())
  gameId        String
  creatorId     String
  players       String[]
  guests        Guest[]   @relation("PlayToGuests")
}